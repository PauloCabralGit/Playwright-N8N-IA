{
  "name": "Playwright Tests + Discord Notification",
  "description": "Runs Playwright tests via test-runner and sends results to Discord",
  "nodes": [
    {
      "parameters": {
        "path": "github-tests",
        "responseMode": "responseNode",
        "httpMethod": "POST",
        "options": {}
      },
      "id": "webhook_github",
      "name": "GitHub Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://host.docker.internal:9998/run-tests",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Authorization",
              "value": "Bearer test-key-123"
            },
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyParametersJson": "{\n  \"ambiente\": \"preprod\",\n  \"env\": {\n    \"SF_URL\": \"https://cec-claro--preprod.sandbox.lightning.force.com/\",\n    \"SF_LOGIN\": \"paulo.cabral.3@globalhitss.com.br.preprod\",\n    \"SF_PASSWORD\": \"@@Amosurfar2028\"\n  }\n}",
        "options": {}
      },
      "id": "http_start_test",
      "name": "Start Test",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [500, 300]
    },
    {
      "parameters": {
        "amount": 10,
        "unit": "seconds"
      },
      "id": "wait_node",
      "name": "Wait 10 seconds",
      "type": "n8n-nodes-base.wait",
      "typeVersion": 1.1,
      "position": [700, 300]
    },
    {
      "parameters": {
        "method": "GET",
        "url": "=http://host.docker.internal:9998/execution-details/{{ $json.execution_id }}",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Authorization",
              "value": "Bearer test-key-123"
            }
          ]
        },
        "options": {}
      },
      "id": "http_poll_status",
      "name": "Poll Status",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [900, 300]
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "comparator": "equals",
              "value1": "={{ $json.status }}",
              "value2": "completed"
            }
          ]
        }
      },
      "id": "if_completed",
      "name": "Success?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [1100, 300]
    },
    {
      "parameters": {
        "url": "={{ $env.DISCORD_WEBHOOK_URL }}",
        "method": "POST",
        "sendBody": true,
        "bodyParametersJson": "{\n  \"content\": \"✅ **Testes Playwright Executados com Sucesso!**\",\n  \"embeds\": [\n    {\n      \"title\": \"Resultados dos Testes\",\n      \"color\": 3066993,\n      \"fields\": [\n        {\n          \"name\": \"Status\",\n          \"value\": \"{{ $json.status }}\",\n          \"inline\": true\n        },\n        {\n          \"name\": \"Código de Saída\",\n          \"value\": \"{{ $json.exitCode }}\",\n          \"inline\": true\n        },\n        {\n          \"name\": \"Duração\",\n          \"value\": \"Aproximadamente 1 minuto\",\n          \"inline\": false\n        },\n        {\n          \"name\": \"Mensagem\",\n          \"value\": \"{{ $json.message }}\",\n          \"inline\": false\n        },\n        {\n          \"name\": \"Execution ID\",\n          \"value\": \"`{{ $json.id }}`\",\n          \"inline\": false\n        }\n      ],\n      \"footer\": {\n        \"text\": \"Playwright Test Runner\"\n      }\n    }\n  ]\n}",
        "options": {}
      },
      "id": "discord_success",
      "name": "Discord Success",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1300, 200]
    },
    {
      "parameters": {
        "url": "={{ $env.DISCORD_WEBHOOK_URL }}",
        "method": "POST",
        "sendBody": true,
        "bodyParametersJson": "{\n  \"content\": \"❌ **Testes Playwright Falharam!**\",\n  \"embeds\": [\n    {\n      \"title\": \"Resultados dos Testes\",\n      \"color\": 15158332,\n      \"fields\": [\n        {\n          \"name\": \"Status\",\n          \"value\": \"{{ $json.status }}\",\n          \"inline\": true\n        },\n        {\n          \"name\": \"Código de Saída\",\n          \"value\": \"{{ $json.exitCode }}\",\n          \"inline\": true\n        },\n        {\n          \"name\": \"Mensagem\",\n          \"value\": \"{{ $json.message }}\",\n          \"inline\": false\n        },\n        {\n          \"name\": \"Erro\",\n          \"value\": \"```\\n{{ $json.stderr }}\\n```\",\n          \"inline\": false\n        },\n        {\n          \"name\": \"Execution ID\",\n          \"value\": \"`{{ $json.id }}`\",\n          \"inline\": false\n        }\n      ],\n      \"footer\": {\n        \"text\": \"Playwright Test Runner\"\n      }\n    }\n  ]\n}",
        "options": {}
      },
      "id": "discord_failure",
      "name": "Discord Failure",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1300, 400]
    },
    {
      "parameters": {},
      "id": "return_response",
      "name": "Return Response",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [1500, 300]
    }
  ],
  "connections": {
    "webhook_github": {
      "main": [
        [
          {
            "node": "http_start_test",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "http_start_test": {
      "main": [
        [
          {
            "node": "wait_node",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "wait_node": {
      "main": [
        [
          {
            "node": "http_poll_status",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "http_poll_status": {
      "main": [
        [
          {
            "node": "if_completed",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "if_completed": {
      "main": [
        [
          {
            "node": "discord_success",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "discord_failure",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "discord_success": {
      "main": [
        [
          {
            "node": "return_response",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "discord_failure": {
      "main": [
        [
          {
            "node": "return_response",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": true,
  "settings": {}
}
